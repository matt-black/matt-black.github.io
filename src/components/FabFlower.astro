---
import { Link, FileUser, FileBadge, Newspaper, Rss } from "@lucide/astro";
---

<div class="fab fab-flower">
  <!-- a focusable div with tabindex is necessary to work on all browsers. role="button" is necessary for accessibility -->
  <div class="tooltip tooltip-top" data-tip="More links">
    <div tabindex="0" role="button" class="btn btn-lg btn-accent btn-circle">
      <Link class="size-6" />
    </div>
  </div>

  <!-- Main Action button replaces the original button when FAB is open -->
  <div class="fab-close">
    Close <span class="btn btn-circle btn-lg btn-error">âœ•</span>
  </div>

  <!-- buttons that show up when FAB is open -->
  <div class="tooltip tooltip-left" data-tip="CV">
    <button class="btn btn-lg btn-circle">
      <FileUser class="size-5" />
    </button>
  </div>
  <div class="tooltip tooltip-left" data-tip="Certifications">
    <button class="btn btn-lg btn-circle">
      <FileBadge class="size-5" />
    </button>
  </div>
  <div class="tooltip" data-tip="Articles">
    <button class="btn btn-lg btn-circle">
      <Newspaper class="size-5" />
    </button>
  </div>
  <div class="tooltip" data-tip="RSS Feed">
    <button class="btn btn-lg btn-circle">
      <Rss class="size-5" />
    </button>
  </div>
</div>
