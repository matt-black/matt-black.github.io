---
import { getCollection } from 'astro:content';

const educationEntries = await getCollection('education');

// Sort by start date, most recent first
const sortedEducation = educationEntries.sort((a, b) =>
  b.data.startDate.getTime() - a.data.startDate.getTime()
);

function formatPeriod(startDate: Date, endDate?: Date) {
  const options: Intl.DateTimeFormatOptions = { month: 'short', year: 'numeric' };
  const start = startDate.toLocaleDateString('en-US', options);
  const end = endDate ? endDate.toLocaleDateString('en-US', options) : 'Present';
  return `${start} - ${end}`;
}
---

<section id="education" class="py-20 px-4">
  <div class="max-w-6xl mx-auto">
    <h2 class="text-4xl font-bold mb-12 text-center">Education</h2>

    <ul class="timeline timeline-vertical timeline-snap-icon">
      {sortedEducation.map((edu, index) => (
        <li>
          {index > 0 && <hr class="bg-secondary" />}
          <div class="timeline-middle">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="w-5 h-5 text-secondary">
              <path d="M10.75 10.818v2.614A3.13 3.13 0 0011.888 13c.482-.315.612-.648.612-.875 0-.227-.13-.56-.612-.875a3.13 3.13 0 00-1.138-.432zM8.33 8.62c.053.055.115.11.184.164.208.16.46.284.736.363V6.603a2.45 2.45 0 00-.35.13c-.14.065-.27.143-.386.233-.377.292-.514.627-.514.909 0 .184.058.39.202.592.037.051.08.102.128.152z" />
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-6a.75.75 0 01.75.75v.316a3.78 3.78 0 011.653.713c.426.33.744.74.925 1.2a.75.75 0 01-1.395.55 1.35 1.35 0 00-.447-.563 2.187 2.187 0 00-.736-.363V9.3c.698.093 1.383.32 1.959.696.787.514 1.29 1.27 1.29 2.13 0 .86-.504 1.616-1.29 2.13-.576.377-1.261.603-1.96.696v.299a.75.75 0 11-1.5 0v-.3c-.697-.092-1.382-.318-1.958-.695-.482-.315-.857-.717-1.078-1.188a.75.75 0 111.359-.636c.08.173.245.376.54.569.313.205.706.353 1.137.417v-2.62a6.985 6.985 0 01-1.137-.417c-.482-.315-.857-.717-1.078-1.188a.75.75 0 111.359-.636c.08.173.245.376.54.569.313.205.706.353 1.137.417V5.05a.75.75 0 01.75-.75z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class={`timeline-${index % 2 === 0 ? 'start' : 'end'} mb-10`}>
            <time class={`font-mono text-sm text-base-content/70 ${index % 2 === 0 ? 'text-right' : ''}`}>
              {formatPeriod(edu.data.startDate, edu.data.endDate)}
            </time>
            <div class="card bg-base-100 shadow-xl mt-2">
              <div class="card-body">
                <div class="flex items-center gap-4 mb-2">
                  {edu.data.logo && (
                    <div class="avatar">
                      <div class="w-12 rounded">
                        <img src={edu.data.logo} alt={edu.data.institution} />
                      </div>
                    </div>
                  )}
                  <div>
                    <h3 class="card-title">{edu.data.institution}</h3>
                    <p class="text-secondary font-semibold">{edu.data.course}</p>
                  </div>
                </div>
                <p class="text-base-content/80">{edu.data.description}</p>
                <div class="card-actions justify-end mt-4">
                  <a
                    href={edu.data.link}
                    target="_blank"
                    rel="noopener noreferrer"
                    class="btn btn-sm btn-outline btn-secondary"
                  >
                    View Institution
                  </a>
                </div>
              </div>
            </div>
          </div>
          {index < sortedEducation.length - 1 && <hr class="bg-secondary" />}
        </li>
      ))}
    </ul>
  </div>
</section>
